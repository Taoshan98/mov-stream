{
  "manifest_version": 3,
  "name": "MovStream",
  "version": "1.0",
  "author": "nunzio.marfe@protonmail.com",
  "description": "MovStream is a Chrome extension that allows users to play .mov files directly in the browser.",
  "permissions": [
    "tabs",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png",
      "512": "logo.png",
      "1024": "logo.png",
      "2048": "logo.png"
    },
    "default_title": "MovStream",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png",
    "512": "logo.png",
    "1024": "logo.png",
    "2048": "logo.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "incognito": "split",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
